<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_weight="3"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView

        android:textSize="70dp"
        android:text="@string/new_event_time"
        android:background="@color/BlueGrey"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <CalendarView
        android:id="@+id/calender"
        android:background="@color/BlueGrey"
        android:firstDayOfWeek="7"
        android:unfocusedMonthDateColor="@color/BlueGrey"
        android:focusedMonthDateColor="@color/Black"
        android:selectedDateVerticalBar="@color/Black"
        android:shownWeekCount="4"
        android:showWeekNumber="false"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" >

    </CalendarView>

    <TimePicker
        android:id="@+id/timepicker"
        android:background="@color/BlueGrey"
        android:amPmBackgroundColor="@color/BlueGrey"
        android:amPmTextColor="@color/Black"
        android:numbersSelectorColor="@color/BlueGrey"
        android:numbersBackgroundColor="@color/BlueGrey"
        android:numbersTextColor="@color/Black"

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </TimePicker>

    <!--<Button-->
        <!--android:textSize="24dp"-->
        <!--android:text="@string/next"-->
        <!--android:background="@color/BlueGrey"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"/>-->

</LinearLayout>